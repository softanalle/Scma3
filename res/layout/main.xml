<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" >
        >
    <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/ui_main_layer2"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

        <com.delektre.Scma3.Preview
                android:id="@+id/uiMainPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
        </com.delektre.Scma3.Preview>
        <com.delektre.Scma3.CrosshairOverlay_
                android:id="@+id/uiCrossHairOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF">
        </com.delektre.Scma3.CrosshairOverlay_>
    </FrameLayout>
    <RelativeLayout
            android:id="@+id/ui_main_layer2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:alpha="100"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

        <ProgressBar android:layout_width="fill_parent"
                     android:layout_height="20dp"
                     android:id="@+id/uiMainProgress"
                     android:max="100"
                     android:progress="50"
                     android:layout_gravity="bottom"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentTop="true"
                     style="@android:style/Widget.Holo.ProgressBar.Horizontal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/label_button_focus"
                android:layout_gravity="center_vertical|right"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:id="@+id/uiMainButtonFocus"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/label_button_click"
                android:id="@+id/uiMainButtonPicture"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>




</RelativeLayout>

